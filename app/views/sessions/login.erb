
<div class="form-container login">

    <div class="intro">
        <img class="logo center" src="images/logo.png">
        <h1> Welcome to Manabu List! </h1>
        <p> Please log in below</p>
    </div>
    <form action="/login" method="post">
        <div class="form-group">
            <input class="input-box" type="email" placeholder="Email Address" name="user[email]" id="email" required>
        </div>
        <div class="form-group">
            <input class="input-box login" type="password" placeholder="Password" name="user[password]" id="password" required>
        </div>
        <% if flash[:error] %>
        <div class="center">
            <h3 class="error"><%= flash[:error] %></h3>
        </div>
        <% end %>
        <input class="btn center" type="submit" value="Log In">
        <p>- OR -</p>
        <button onclick="location.href='/signup'" type="button" class="btn center small">Sign Up Here</button>
    </form>

</div>